<h1>Editing Book</h1>
<% if @book.errors.any? %> <%# ifに対するendを忘れない %>
 <%= @book.errors.count %>errors prohibited this book from being updated
 <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
 </ul>
<% end %> <%# ifに対するend %>
<%= form_with model:@book do |f| %>

<h4>Title</h4>
<%= f.text_field:title %>

<h4>Body</h4>
<%= f.text_area:body %><br><br>
<%= f.submit 'Update Book' %><br><br>

<% end %>

<%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",books_path %>



